@import './color.styl'

@font-face
  font-family AstropiaMain
  src url('~@/assets/fonts/Tintoretto.ttf')
@font-face
  font-family Blinker
  src url('~@/assets/fonts/Blinker-Regular.ttf')

*
  box-sizing border-box

body
  margin 0
  font-family Blinker
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background-color $main-background
  color $content
ul
  margin 0
  padding 0
  list-style none
p
  margin 0

a
  color inherit
  text-decoration none

._fm
  font-family AstropiaMain
  line-height 1em
._fb
  font-family Blinker
._fc
  font-family "Lucida Console", Courier, monospace

